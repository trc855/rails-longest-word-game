<h1>New game</h1>

<% @letters.each do |letter| %>
  <%= letter %>
<% end %>

<form action="/score" method="post" data-turbo="false">
  <input type="text" name="word" placeholder="What is the longest word you can find?">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id= "form_authenticity_token" name="letters" type="hidden" value="<%= @letters %>">
</form>
